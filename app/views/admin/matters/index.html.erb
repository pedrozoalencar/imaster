<h1>Listing matters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Matter father</th>
    <th>Workflow state</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matters.each do |matter| %>
  <tr>
    <td><%= matter.name %></td>
    <td><%= matter.matter_father_id %></td>
    <td><%= matter.workflow_state %></td>
    <td><%= link_to 'Show', admin_matter_path(matter) %></td>
    <td><%= link_to 'Edit', edit_admin_matter_path(matter) %></td>
    <td><%= link_to 'Destroy', admin_matter_path(matter), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

